<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:menu="urn:import:org.jboss.set.mjolnir.client.application.menu">
    <ui:style>
        .rootPanel {
            background: white;
            margin: 2px auto;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
        }
        .westPanel {
            width: 100%;
            overflow: auto;
        }
        .westPanel ul {
            list-style-type: none;
            padding-left: 0;
            margin-left: 0;
        }
        .northPanel {
            background: #cc0000 url('images/rh-logo.png') 10px center no-repeat;
            height: 42px;
            padding: 10px 0 10px 62px;
            color: white;
        }
        .northPanel h1 {
            font-weight: bold;
            font-size: 1.3em;
            line-height: 42px;
            margin: 0;
            padding: 0;
        }
        .northPanel a {
            font-weight: bold;
            color: white;
        }
        .centerPanel {
            padding: 1em;
            border-left: 1px solid #CFCFCF;
            overflow: auto;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="1024px" styleName="contentBox {style.rootPanel}" ui:field="rootPanel">
        <g:north size="62">
            <g:HTMLPanel styleName="{style.northPanel}">
                <h1>Mjolnir</h1>
                <div style="position: absolute; right: 1em; bottom: 1em;">
                    <g:InlineLabel ui:field="usernameLabel"/> |
                    <g:Anchor href="#" ui:field="logoutLink" text="Logout">Logout</g:Anchor>
                </div>
            </g:HTMLPanel>
        </g:north>
        <g:west size="200">
            <g:FlowPanel styleName="{style.westPanel} menuPanel">
                <menu:Menu ui:field="mainMenu"/>
                <menu:Menu ui:field="adminMenu"/>
            </g:FlowPanel>
        </g:west>
        <g:center>
            <g:HTMLPanel ui:field="mainPanel" styleName="{style.centerPanel}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>