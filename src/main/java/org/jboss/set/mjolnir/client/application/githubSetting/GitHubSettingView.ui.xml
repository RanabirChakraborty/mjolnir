<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .error {
            color: red;
        }
    </ui:style>
    <g:HTMLPanel>
        <h3>GitHub Settings</h3>
        <g:FormPanel ui:field="form">
            <g:HTMLPanel>
                <p>
                    GitHub username:
                    <g:TextBox ui:field="gitHubNameInput"/>
                </p>
                <p class="{style.error}">
                    <g:HTML ui:field="feedbackLabel"/>
                </p>
                <p style="text-align: right;">
                    <g:SubmitButton ui:field="submitButton">Save</g:SubmitButton>
                </p>
            </g:HTMLPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder>