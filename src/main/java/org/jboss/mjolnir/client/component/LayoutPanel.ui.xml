<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .westPanel {
            padding: 1em;
        }
        .northPanel {
            padding: 1em;
        }
        .centerPanel {
            padding: 1em;
        }
    </ui:style>
    <g:DockLayoutPanel unit="EM" width="800px" styleName="contentBox">
        <g:north size="7">
            <g:HTMLPanel styleName="{style.northPanel}">
                <h1>Mjolnir</h1>
                <div style="position: absolute; right: 1em; bottom: 1em;">
                    <b><g:InlineLabel ui:field="usernameLabel"/></b>
                    <g:Anchor ui:field="logoutLink" text="Logout">Logout</g:Anchor>
                </div>
            </g:HTMLPanel>
        </g:north>
        <g:west size="15">
            <g:VerticalPanel ui:field="menuPanel" styleName="{style.westPanel}"/>
        </g:west>
        <g:center>
            <g:HTMLPanel ui:field="mainPanel" styleName="{style.centerPanel}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>