<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .loginPanel {
            padding: 1em;
            background: white;
            margin: 0 auto;
            width: 350px;
            position: relative;
            top: 40%;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.loginPanel} contentBox">
        <g:FormPanel ui:field="form">
            <g:HTMLPanel>
                <table>
                    <tr>
                        <td>Kerberos Username:</td>
                        <td><g:TextBox ui:field="usernameField" width="200px"/></td>
                    </tr>
                    <tr>
                        <td>Kerberos Password:</td>
                        <td><g:PasswordTextBox ui:field="passwordField" width="200px"/></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><g:SubmitButton ui:field="loginButton">Login</g:SubmitButton></td>
                    </tr>
                </table>
            </g:HTMLPanel>
        </g:FormPanel>
        <p><g:InlineLabel ui:field="feedbackLabel"/></p>
    </g:HTMLPanel>
</ui:UiBinder>